@model Empregado

<div class="container shadow p-5">
    <div class="row pb-2">
        <h2>Delete Employee</h2>
    </div>

    <form method="post" asp-action="DeleteEmp">
        <input asp-for="Id" hidden />
        <div asp-validation-summary="All"></div>

        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="Nome">Employee Name</label>
                <input type="text" class="form-control mb-3" asp-for="Nome" disabled>
                <span asp-validation-for="Nome" class=" alert-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="Designacao">Designação</label>
                <input type="text" class="form-control mb-3" asp-for="Designacao" disabled>
                <span asp-validation-for="Designacao" class=" alert-danger"></span>
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="Endereco">Endereço</label>
                <input type="text" class="form-control mb-3" asp-for="Endereco" disabled>
                <span asp-validation-for="Endereco" class=" alert-danger"></span>
            </div>
            <div class="form-group col-md-6 mb-3">
                <label asp-for="EmpregadoEm">Empregado Em</label>
                <input type="datetime-local" class="form-control" asp-for="EmpregadoEm" disabled>
                <span asp-validation-for="EmpregadoEm" class=" alert-danger"></span>
            </div>
        </div>
        <button type="submit" class="btn btn-lg btn-danger p-2"><i class="bi bi-trash-fill"></i>Deletar</button>
        <a asp-controller="Empregado" asp-action="Index" class="btn btn-lg btn-warning p-2">Voltar a Lista</a>
    </form>

</div>


@*//for front end validations*@

@section Scripts{
    @{
    <partial name="_ValidationScriptsPartial" />
    }
}