@model IEnumerable<Empregado>

    @{
    ViewData["Title"] = "Index";
}

@if (TempData["ResultOk"] != null)
{
    <h1 class="alert-success">@TempData["ResultOk"]</h1>
}

<div class="container shadow p-5">

    <h1 class="text-center mb-3">Lista de Empregados </h1>

    <div class="col mb-3">
        <a asp-controller="Empregado" asp-action="Create" class="btn btn-lg btn-primary"><i class="bi bi-file-plus-fill"></i>Adicionar Empregado</a>
    </div>
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th scope="col">Nome</th>
                <th scope="col">Designação</th>
                <th scope="col">Endereço</th>
                <th scope="col">Empregado Em</th>
                <th></th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <td width="20%">
                        @item.Nome
                    </td>
                    <td width="20%">
                        @item.Designacao
                    </td>
                    <td width="25%">
                        @item.Endereco
                    </td>
                    <td width="20%">
                        @item.EmpregadoEm
                    </td>
                    <td>
                        <div role="group" class="w-60 btn-group">
                            <a asp-controller="Empregado" asp-action="Edit" asp-route-id="@item.Id" class=" btn btn-sm btn-primary"><i class="bi bi-pencil-square"></i>Editar</a>&nbsp;
                            <a asp-controller="Empregado" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger"><i class="bi bi-trash-fill"></i>Deletar</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>